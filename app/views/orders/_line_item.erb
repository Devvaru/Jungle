<tr class="line-item">
    <td>
      <%= image_tag line_item.product.image.tiny.url %>
    </td>
    <td>
      <h4><%= line_item.product.name %></h4>
      <p><%= line_item.product.description %></p>
    </td>
    <td>
      <div>
        <p>Quantity: </p> <%= line_item.quantity %>
      </div>
    </td>
    <td>
    <p>Price: </p> <%= humanized_money_with_symbol line_item.total_price_cents / 100.0 %>
    </td>
</tr>